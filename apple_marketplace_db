-- Views
-- Create View to get the total sum of all orders in USD and ARS by year
CREATE VIEW ORDER_TOTAL_AMOUNT_BY_YEAR AS
SELECT 
    YEAR(date) AS order_year, -- add year column
    SUM(total_amount_usd) AS total_amount_usd_sum, 
    SUM(total_amount_ars) AS total_amount_ars_sum
FROM ORDER_SALE
GROUP BY order_year; -- group by year

-- Create View to get the total sum of all orders in USD and ARS by year/month
CREATE VIEW ORDER_TOTAL_AMOUNT_BY_YEAR_MONTH AS
SELECT 
    YEAR(date) AS order_year, -- add year column
    MONTH(date) AS order_month, -- add month column
    SUM(total_amount_usd) AS total_amount_usd_sum, 
    SUM(total_amount_ars) AS total_amount_ars_sum
FROM ORDER_SALE
GROUP BY order_year, order_month; -- group by year and month

-- Create View for Top 10 Customers by Total Amount in USD
-- add customer name and customer id to the view
CREATE VIEW ORDER_TOP_10_CUSTOMERS AS
SELECT 
    cu.id AS customer_id,
    cu.name,        
    SUM(o.total_amount_usd) AS total_amount_usd
FROM ORDER_SALE o
JOIN CUSTOMER cu ON o.customer_id = cu.id
GROUP BY cu.id, cu.name
ORDER BY total_amount_usd DESC
LIMIT 10;

-- Create View for Total Amount in USD by Seller with Seller Name
CREATE VIEW ORDER_TOTAL_AMOUNT_BY_SELLER AS
SELECT 
    s.id, 
    s.name, 
    SUM(o.total_amount_usd) AS total_amount_usd
FROM ORDER_SALE o
JOIN SELLER s ON o.seller_id = s.id
GROUP BY s.id, s.name
ORDER BY total_amount_usd DESC;

-- Create View the total amount in USD of all orders by product
CREATE VIEW ORDER_TOTAL_AMOUNT_BY_PRODUCT AS
SELECT 
    od.product_id, 
    p.name,
    SUM(od.total_product_item) AS total_product_item,
    SUM(od.total_product_price_usd) AS total_product_price_usd
FROM ORDER_DETAIL od
JOIN PRODUCT p ON od.product_id = p.id
GROUP BY od.product_id, p.name;

-- Create View the total amount in USD of all orders by category
CREATE VIEW ORDER_TOTAL_AMOUNT_BY_CATEGORY AS
SELECT 
    c.name AS category_name, 
    SUM(od.total_product_item) AS total_product_item,
    SUM(od.total_product_price_usd) AS total_product_price_usd
FROM ORDER_DETAIL od
JOIN PRODUCT p ON od.product_id = p.id
JOIN CATEGORY c ON p.category_id = c.id
GROUP BY c.name;

-- Create View the total amount in USD of all orders by color
CREATE VIEW ORDER_TOTAL_AMOUNT_BY_COLOR AS
SELECT 
    p.color_id, 
    co.name AS color_name,
    SUM(od.total_product_price_usd) AS total_product_price_usd
FROM ORDER_DETAIL od
JOIN PRODUCT p ON od.product_id = p.id
JOIN COLOR co ON p.color_id = co.id
GROUP BY p.color_id, co.name
ORDER BY total_product_price_usd DESC;  

-- Create View the total amount in USD of all orders by city
CREATE VIEW ORDER_TOTAL_AMOUNT_BY_CITY AS
SELECT 
    a.city_id, 
    c.name AS city_name,
    SUM(o.total_amount_usd) AS total_amount_usd
FROM ORDER_SALE o
JOIN CUSTOMER cu ON o.customer_id = cu.id
JOIN ADDRESS a ON cu.address_id = a.id
JOIN CITY c ON a.city_id = c.id
GROUP BY a.city_id, c.name
ORDER BY total_amount_usd DESC;

-- Create View the total amount in USD of all orders by shipper
CREATE VIEW ORDER_TOTAL_AMOUNT_BY_SHIPPER AS
SELECT 
    s.id, 
    sh.name AS shipper_name, 
    SUM(o.total_amount_usd) AS total_amount_usd
FROM ORDER_SALE o
JOIN SHIPPING s ON o.seller_id = s.id
JOIN SHIPPER sh ON s.shipper_id = sh.id
GROUP BY s.id, sh.name;

-- Functions

-- Function 1: At table ORDER_SALE, update the total_amount_ars column with the total_amount_usd column multiplied by the exchange rate
UPDATE ORDER_SALE
SET total_amount_ars = total_amount_usd * (SELECT er_usd FROM USD_EXCHANGE_RATE WHERE er_date = DATE);

-- Function 2: At table Shipping, update the shipping_charge column with the following rule:
-- If free shipping is true then shipping charge is $0.00
-- if free shipping is false:
-- if state is Buenos Aires then shipping charge is $0 else shipping charge is $100 every 100 km to the city
UPDATE SHIPPING
SET shipping_charge_ars = CASE
    WHEN is_free_shipping = 1 THEN 0.00
    ELSE 100.00 * (SELECT distance_km FROM CITY WHERE CITY.id = SHIPPING.id) / 100
END;

-- Stored Procedures 
-- Create Stored Procedure to insert a new order
DELIMITER //

CREATE PROCEDURE INSERT_ORDER(
    IN p_date DATE, 
    IN p_total_amount_usd DECIMAL(10,2), 
    IN p_total_amount_ars DECIMAL(10,2), 
    IN p_customer_id INT, 
    IN p_seller_id INT, 
    IN p_shipping_id INT, 
    IN p_er_date DATE
)
BEGIN
    DECLARE v_er_date DATE;

    -- Initialize v_er_date with NULL
    SET v_er_date = NULL;

    -- Search for the exact date in USD_EXCHANGE_RATE
    SELECT er_date INTO v_er_date 
    FROM USD_EXCHANGE_RATE 
    WHERE er_date = p_er_date;

    -- If it does not exist, search for the closest date
    IF v_er_date IS NULL THEN
        SELECT MIN(er_date) INTO v_er_date
        FROM USD_EXCHANGE_RATE 
        WHERE er_date > p_er_date;
    END IF;

    -- Insert the order with the corrected exchange rate date
    INSERT INTO ORDER_SALE (date, total_amount_usd, total_amount_ars, customer_id, seller_id, shipping_id, er_date)
    VALUES (p_date, p_total_amount_usd, p_total_amount_ars, p_customer_id, p_seller_id, p_shipping_id, v_er_date);
END //
DELIMITER ;

-- Create Stored Procedure to insert a new order detail
DELIMITER //
CREATE PROCEDURE INSERT_ORDER_DETAIL(
    IN p_total_product_price_usd DECIMAL(10,2), 
    IN p_total_product_item INT, 
    IN p_order_id INT, 
    IN p_product_id INT
    )
BEGIN
    INSERT INTO ORDER_DETAIL (total_product_price_usd, total_product_item, order_id, product_id)
    VALUES (p_total_product_price_usd, p_total_product_item, p_order_id, p_product_id);
END //
DELIMITER ;

-- Create Stored Procedure to update the total product price in USD of an order detail
DELIMITER //
CREATE PROCEDURE UPDATE_ORDER_DETAIL_TOTAL_PRODUCT_PRICE(
    IN p_id INT, 
    IN p_total_product_price_usd DECIMAL(10,2)
    )
BEGIN
    UPDATE ORDER_DETAIL
    SET total_product_price_usd = p_total_product_price_usd
    WHERE id = p_id;
END //
DELIMITER ;

-- Create Stored Procedure to update the total amount in USD and in ARS of an order
DELIMITER //
CREATE PROCEDURE UPDATE_ORDER_TOTAL_AMOUNT(
    IN p_id INT, 
    IN p_total_amount_usd DECIMAL(10,2), 
    IN p_total_amount_ars DECIMAL(10,2)
    )
BEGIN
    UPDATE ORDER_SALE
    SET total_amount_usd = p_total_amount_usd, total_amount_ars = p_total_amount_ars
    WHERE id = p_id;
END //
DELIMITER ;

-- Create Stored Procedure to update the shipping charge of a shipping
DELIMITER //
CREATE PROCEDURE UPDATE_SHIPPING_CHARGE(
    IN p_id INT, 
    IN p_is_free_shipping TINYINT(1), 
    IN p_shipping_charge_ars DECIMAL(10,2)
    )
BEGIN
    UPDATE SHIPPING
    SET is_free_shipping = p_is_free_shipping, shipping_charge_ars = p_shipping_charge_ars
    WHERE id = p_id;
END //
DELIMITER ;

-- Create Stored Procedure to delete an order
DELIMITER //
CREATE PROCEDURE DELETE_ORDER(
    IN id INT
    )
BEGIN
    DELETE FROM ORDER_SALE
    WHERE id = id;
END //
DELIMITER ;

-- Create Stored Procedure to delete an order detail
DELIMITER //
CREATE PROCEDURE DELETE_ORDER_DETAIL(
    IN id INT
    )
BEGIN
    DELETE FROM ORDER_DETAIL
    WHERE id = id;
END //
DELIMITER ;

-- Triggers
-- Create a Trigger to update the total product price in USD of an order detail before insert
DELIMITER //
CREATE TRIGGER before_order_detail_insert
BEFORE INSERT ON ORDER_DETAIL
FOR EACH ROW
BEGIN
    DECLARE unit_price DECIMAL(10,2);
    DECLARE product_exists INT;

    -- Verificar si el producto existe
    SELECT COUNT(*) INTO product_exists FROM PRODUCT WHERE id = NEW.product_id;

    IF product_exists = 0 THEN
        SIGNAL SQLSTATE '45000' SET MESSAGE_TEXT = 'El product_id no existe en la tabla PRODUCT';
    ELSE
        -- Obtener el precio unitario del producto
        SELECT unit_price_usd INTO unit_price FROM PRODUCT WHERE id = NEW.product_id;
        -- Calcular el total_product_price_usd
        SET NEW.total_product_price_usd = NEW.total_product_item * unit_price;
    END IF;
END //
DELIMITER ;

-- Create a Trigger to update the total product price in USD of an order detail before update
DELIMITER //
CREATE TRIGGER before_order_detail_update
BEFORE UPDATE ON ORDER_DETAIL
FOR EACH ROW
BEGIN
    DECLARE unit_price DECIMAL(10,2);
    DECLARE product_exists INT;

    -- Verificar si el producto existe
    SELECT COUNT(*) INTO product_exists FROM PRODUCT WHERE id = NEW.product_id;

    IF product_exists = 0 THEN
        SIGNAL SQLSTATE '45000' SET MESSAGE_TEXT = 'El product_id no existe en la tabla PRODUCT';
    ELSE
        -- Obtener el precio unitario del producto
        SELECT unit_price_usd INTO unit_price FROM PRODUCT WHERE id = NEW.product_id;
        -- Calcular el total_product_price_usd
        SET NEW.total_product_price_usd = NEW.total_product_item * unit_price;
    END IF;
END //
DELIMITER ;

-- Create a Trigger to update the total product price in USD of an order detail after insert
DELIMITER //
CREATE TRIGGER UPDATE_TOTAL_AMOUNT_AFTER_INSERT
AFTER INSERT ON ORDER_SALE
FOR EACH ROW
BEGIN
    UPDATE ORDER_SALE
    SET total_amount_usd = NEW.total_amount_usd * (SELECT er_usd FROM USD_EXCHANGE_RATE WHERE er_date = NEW.er_date),
    total_amount_ars = NEW.total_amount_usd * (SELECT er_usd FROM USD_EXCHANGE_RATE WHERE er_date = NEW.er_date)
    WHERE id = NEW.id;
END //
DELIMITER ;

-- Create a Trigger to update the total amount in USD and in ARS of an order after update
DELIMITER //
CREATE TRIGGER UPDATE_TOTAL_AMOUNT_AFTER_UPDATE
AFTER UPDATE ON ORDER_SALE
FOR EACH ROW
BEGIN
    UPDATE ORDER_SALE
    SET total_amount_usd = NEW.total_amount_usd * (SELECT er_usd FROM USD_EXCHANGE_RATE WHERE er_date = NEW.er_date),
    total_amount_ars = NEW.total_amount_usd * (SELECT er_usd FROM USD_EXCHANGE_RATE WHERE er_date = NEW.er_date)
    WHERE id = NEW.id;
END //
DELIMITER ;

-- Create a Trigger to update the shipping charge of a shipping after insert
DELIMITER //
CREATE TRIGGER UPDATE_SHIPPING_CHARGE_AFTER_INSERT
AFTER INSERT ON SHIPPING
FOR EACH ROW
BEGIN
    UPDATE SHIPPING
    SET shipping_charge_ars = CASE
        WHEN NEW.is_free_shipping = 1 THEN 0.00
        ELSE 100.00 * (SELECT distance_km FROM CITY WHERE CITY.id = NEW.id) / 100
    END
    WHERE id = NEW.id;
END //
DELIMITER ;

-- Create a Trigger to update the shipping charge of a shipping after update
DELIMITER //
CREATE TRIGGER UPDATE_SHIPPING_CHARGE_AFTER_UPDATE
AFTER UPDATE ON SHIPPING
FOR EACH ROW    
BEGIN
    UPDATE SHIPPING
    SET shipping_charge_ars = CASE
        WHEN NEW.is_free_shipping = 1 THEN 0.00
        ELSE 100.00 * (SELECT distance_km FROM CITY WHERE CITY.id = NEW.id) / 100
    END
    WHERE id = NEW.id;
END //
DELIMITER ;

-- Update records in ORDER_DETAIL to activate the trigger
UPDATE ORDER_DETAIL
SET total_product_item = total_product_item; -- This will activate the BEFORE UPDATE trigger